<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <solid android:color="#151D1D" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:bottom="4dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#FF5733"
                android:endColor="#FFC300"
                android:centerColor="#FF8D1A"
                android:type="linear" />

            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>